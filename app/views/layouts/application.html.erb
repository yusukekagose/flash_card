<!DOCTYPE html>
<html>
  <head>
    <title>FlashCard</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if current_user.has_roles?(:admin) %>
    <%= render "shared/admin_nav" %>
  <% end %>
    <%= render "shared/nav-bar" %>
    <%= render "shared/sub_nav_bar" %>
    <%= render "shared/notification_bar.html.erb" %>
    <div class="row">
    <%= yield %>
    </div>

  <section id="alphabet" class="row bg-light">
  <div class="container ">
    <%
      ary = []
      ('a'..'z').each do |i|
        ary.push(i.to_s)
    end %>
    <% ary.each do |a| %>
    <div class="float-left p-2">
      <%= a %>
    </div>
    <% end %>
  </div>
  </section>
  <%= render "shared/main_footer" %>


  


  </body>
</html>
