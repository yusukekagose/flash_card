<!DOCTYPE html>
<html>
  <head>
    <title>FlashCard</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= render "shared/nav-bar" %>
    <%= render "shared/sub_nav_bar" %>
    <% if flash[:notice] %>
      <div class="alert alert-success alert-dismissible fadeshow">
      <button class="close" data-dismiss="alert" type="button">
        <span>&times;</span>
      </button>
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="alert alert-danger alert-dismissible fadeshow">
      <button class="close" data-dismiss="alert" type="button">
        <span>&times;</span>
      </button>
        <%= flash[:alert] %>
      </div>
    <% end %>
    <%= yield %>



  </body>
</html>
