<p id="notice"><%= notice %></p>

<h1>Meanings</h1>

<table>
  <thead>
    <tr>
      <th>英語</th>
      <th>意味</th>
      <th>品詞</th>
      <th>toeic</th>
      <th>英検</th>
      <th>edit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%  @words.each do |word| %>
    <% word.meanings.first(1).each do |word_meaning| %>
      <tr>
        <td><%= word.english_word %></td>
        <td><%= word_meaning.meaning %></td>
        <td><%= word_meaning.parse %></td>
        <td><%= word_meaning.toeic %></td>
        <td><%= word_meaning.eiken %></td>
        <td><%= word_meaning.toeic %></td>
        <td><%= link_to 'Show',meaning_path(word_meaning.id) %></td>
        <td><%= link_to 'Edit', edit_meaning_path(word_meaning.id) %></td>
        <td><%= link_to 'Destroy', meaning_path(word_meaning), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% word.meanings.drop(1).each do |word_meaning| %>
      <tr>
        <td></td>
        <td><%= word_meaning.meaning %></td>
        <td><%= word_meaning.parse %></td>
        <td><%= word_meaning.toeic %></td>
        <td><%= word_meaning.eiken %></td>
        <td><%= word_meaning.toeic %></td>
        <td><%= link_to 'Show', meaning_path(word_meaning.id) %></td>
        <td><%= link_to 'Edit', edit_meaning_path(word_meaning) %></td>
        <td><%= link_to 'Destroy', meaning_path(word_meaning), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

