<p id="notice"><%= notice %></p>
<div class="mx-auto container-90">
  <p>
  <strong>Meaning:</strong>
  <%= @meaning.meaning %>
</p>
<table class="table table-hover">
  <thead >
    <tr>
      <th>例文</th>
      <th>意味</th>
      <th colspan="3"></th>
      <th><%= submit_tag "単語帳に追加", class: "btn btn-primary" %></th>
    </tr>
  </thead>
  <tbody>
    <% @examples.each do |example| %>
      <tr>
        <td><%= example.sentence %></td>
        <td><%= example.translation %></td>

        <%= simple_form_for(@like) do |f|  %>
        <% if example.likes.where(user_id: current_user.id).exists? %>
        <td><i class="fa fa-thumbs-up thumbs-uped" aria-hidden="true" data-toggle="tooltip" data-placement="right" title="いいね済み">
        <%= Like.where(example_id: example.id).count %>
        </td>
        <% else %>
        <td>
          <%= f.input :example_id, :as => :hidden, :input_html => { :value => example.id, style: "display:none;" } %>
          <%= button_tag(type: 'submit', class: "btn btn-link") do %><i class="fa fa-thumbs-up" aria-hidden="true" data-toggle="tooltip" data-placement="right" title="ナイス"></i><% end %>
          <span class="like-count"><%= Like.where(example_id: example.id).count %></span>
        </td>
        <% end %>
        <% end %>


      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Edit', edit_meaning_path(@meaning) %> |
<%= link_to 'Back', meanings_path %>

</div>
